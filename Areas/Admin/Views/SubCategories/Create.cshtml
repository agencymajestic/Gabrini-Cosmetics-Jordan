@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model GabriniCosmetics.Areas.Admin.Models.DTOs.CreateSubcategoryDTO

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Create New Subcategory</h4>
                </div>
                <div class="card-body">
                    <form id="create-subcategory-form" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="NameEn" class="control-label"></label>
                            <input asp-for="NameEn" class="form-control" />
                            <span asp-validation-for="NameEn" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NameAr" class="control-label"></label>
                            <input asp-for="NameAr" class="form-control"/>
                            <span asp-validation-for="NameAr" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories" >
                                <option value="@null" selected disabled>Select Category</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                        <div class="form-group d-flex gap-2 justify-content-end">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a href="/Admin/SubCategories" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#create-subcategory-form').submit(function (e) {
            e.preventDefault(); // Prevent the default form submission
            $('.text-danger').text('');
            // Gather form data
            var formData = new FormData(this);

            $.ajax({
                url: '/Admin/SubCategories/Create', // The server-side URL
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    // Handle success (e.g., show a success message or redirect)
                    window.location.href = "/Admin/Subcategories";
                },
                error: function (response) {
                    if (response.responseJSON && response.responseJSON.errors) {
                        for (const key in response.responseJSON.errors) {
                            if (key === '$id') continue;
                            $(`[name="${key}"]`).next('.text-danger').text(response.responseJSON.errors[key]['$values']);
                        }
                    }
                    else {
                        alert('An unexpected error occurred.');
                    }
                }
            });
        });
    });
</script>
