@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<GabriniCosmetics.Areas.Admin.Models.SocialMedia>

<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="list-product-header">
                        <div>
                            @if(Model.Count < 5)
                            {
                                <a class="btn btn-primary" href="/Admin/SocialMedia/Create"><i class="fa fa-plus"></i> Add Social Media</a>
                            }
                        </div>
                    </div>
                    <div class="list-product list-SocialMedia">
                        <table class="table table-striped" id="SocialMedia-status">
                            <thead>
                                <tr>
                                    <th><span class="f-light f-w-600">Image</span></th>
                                    <th><span class="f-light f-w-600">Link</span></th>
                                    <th><span class="f-light f-w-600">Action</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="SocialMedia-removes">
                                        <td>
                                            <div class="SocialMedia-images">
                                                <div class="light-SocialMedia-box">
                                                    <img class="img-fluid" src="~/uploads/@item.Image" alt="Social Media Image" style="max-width: 200px;">
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.Url</td>
                                        <td>
                                            <div class="SocialMedia-action">
                                                <a class="action-icon" href="/Admin/SocialMedia/Edit/@item.Id">
                                                    <i class="fa-sharp fa-light fa-pen-to-square"></i>
                                                </a>
                                                <a class="action-icon" href="#" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@item.Id">
                                                    <i class="fa-regular fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->
<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Social Media?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" id="confirmDeleteButton">Yes</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        var SocialMediaId;

        // Ensure the modal event is properly set up
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            SocialMediaId = button.data('id');
            console.log('Social Media ID to delete:', SocialMediaId); // Debug log
        });

        // Confirm delete button click event
        $('#confirmDeleteButton').click(function () {
            console.log('Confirm delete button clicked'); // Debug log
            $.ajax({
                type: 'POST',
                url: '/Admin/SocialMedia/Delete',
                contentType: 'application/json',
                data: JSON.stringify(SocialMediaId),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function () {
                    console.log('Social Media deleted successfully'); // Debug log
                    location.reload();
                },
                error: function () {
                    console.log('Error deleting Social Media'); // Debug log
                    alert('Error deleting Social Media');
                }
            });
        });
    });
</script>
