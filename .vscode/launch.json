    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: GabriniCosmetics debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "clean and build",
            "program": "${workspaceFolder}/bin/Debug/net7.0/GabriniCosmetics.dll",
            "cwd": "${workspaceFolder}",
            "launchSettingsFilePath": "${workspaceFolder}/Properties/launchSettings.json",
            "launchSettingsProfile": "https",       
            "serverReadyAction": {
                "action": "openExternally",
                "killOnServerStop": true
            },
            "internalConsoleOptions": "openOnSessionStart",
            "requireExactSource": false
        },
    ]
}