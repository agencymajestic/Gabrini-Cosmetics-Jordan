    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Select all minus and plus buttons and quantity inputs
            const minusButtons = document.querySelectorAll('.qty-minus');
            const plusButtons = document.querySelectorAll('.qty-plus');

            // Function to handle updating quantity
            function updateQuantity(button, delta) {
                const input = button.closest('.qty-input-wrap').querySelector('.qty-input');
                let currentValue = parseInt(input.value, 10);

                if (!isNaN(currentValue)) {
                    const newValue = currentValue + delta;
                    input.value = newValue > 0 ? newValue : 1; // Ensure value is at least 1
                }
            }

            // Add event listeners to all minus buttons
            minusButtons.forEach(button => {
                button.addEventListener('click', function () {
                    updateQuantity(button, -1);
                });
            });

            // Add event listeners to all plus buttons
            plusButtons.forEach(button => {
                button.addEventListener('click', function () {
                    updateQuantity(button, 1);
                });
            });
        });
    </script>
