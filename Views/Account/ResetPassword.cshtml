@model GabriniCosmetics.Models.Identity.ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var email = TempData["Email"].ToString();
    var token = TempData["Token"].ToString();
}
<div class="master-column-wrapper">
    <div class="center-1">
        <div class="page login-page">
            <div class="page-title">
                <h1>@Localizer["Welcome"]</h1>
            </div>
            <div class="page-body page-body-responsive">
                <div class="customer-blocks">
                    <div class="returning-wrapper fieldset">
                        <form asp-action="ResetPassword" method="post" autocomplete="off">
                            <div class="alert alert-danger message-error form-fields validation-summary-errors" role="alert" asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            <input type="hidden" asp-for="Email" value="@email" />
                            <input type="hidden" asp-for="Token" value="@token" />
                            <div class="title"><strong>@Localizer["ResetPasswordTitle"]</strong></div>
                            <div class="form-fields">
                                <div class="inputs">
                                    <label for="Password">@Localizer["Password"]:</label>
                                    <input class="password" type="password" asp-for="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="inputs">
                                    <label for="ConfirmPassword">@Localizer["ConfirmPassword"]:</label>
                                    <input class="password" type="password" asp-for="ConfirmPassword" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="inputs reversed">
                                    <span class="forgot-password"><a href="/account/login">Login</a></span>
                              </div>
                            </div>
                            <div class="buttons">
                                <button type="submit" class="button-1 login-button">@Localizer["Confirm"]</button>
                            </div>
                        </form>
                        <div class="external-authentication"></div>
                    </div>
                    <div class="new-wrapper register-block fieldset">
                        <div class="title"><strong>@Localizer["NewCustomer"]</strong></div>
                        <div class="text">@Localizer["NewCustomerDesc"]</div>
                        <div class="buttons">
                            <a type="button" class="button-1 register-button" asp-controller="Account" asp-action="PasswordRecovery">@Localizer["Confirm"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
